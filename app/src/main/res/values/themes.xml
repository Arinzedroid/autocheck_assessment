<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AutochekAssessment" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">@color/app_white</item>
        <item name="colorPrimaryVariant">@color/app_white</item>
        <item name="colorOnPrimary">@color/app_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/app_white</item>
        <item name="colorSecondaryVariant">@color/app_white</item>
        <item name="colorOnSecondary">@color/app_white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="bottom_menu">
        <item name="android:bottomRightRadius">10dp</item>
        <item name="android:bottomLeftRadius">10dp</item>
        <item name="android:background">@color/white</item>
        <item name="itemBackground">@color/white</item>
        <item name="itemIconTint">@drawable/bottom_nav_drawable</item>
        <item name="menu">@menu/bottom_nav_menu</item>
        <item name="itemTextColor">@drawable/bottom_nav_drawable</item>
    </style>

    <style name="AppTheme.TextAppearance.Bold" parent="android:TextAppearance">
        <item name="fontPath">font/gilroy_extra_bold.otf</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>